<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo"
    android:orientation="vertical"
    tools:context=".fragments.niveluno.ConcenVocalesActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.33">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical|center_horizontal"
            android:text="NIVEL 3"
            android:textColor="@color/cardview_dark_background"
            android:textSize="34sp" />

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/cinta_niveles"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="35dp"
                android:src="@drawable/ic_oros" />

            <TextView
                android:id="@+id/tv_puntos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="x 0"
                android:textColor="@color/cardview_dark_background"
                android:textSize="25sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/ic_avatarNiveles"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignEnd="@+id/linearLayout2"
            android:layout_alignParentTop="true"
            android:layout_alignRight="@+id/linearLayout2"
            android:layout_marginTop="20dp" />

        <ImageView
            android:id="@+id/img_ayuda"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignEnd="@+id/ic_avatarNiveles"
            android:layout_alignRight="@+id/ic_avatarNiveles"
            android:layout_below="@+id/ic_avatarNiveles"
            android:src="@drawable/ayuda" />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:background="@drawable/enc_pareja"
            android:id="@+id/imageView8"
            android:layout_below="@id/linearLayout2"
            android:layout_marginTop="80dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            />
    </RelativeLayout>

    <GridView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="22dp"
        android:layout_marginRight="22dp"
        android:numColumns="4"
        android:columnWidth="90dp"
        android:stretchMode="columnWidth"
        android:id="@+id/gridImagenes"
        android:verticalSpacing="15dp">
    </GridView>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:src="@drawable/img_cinta_dos"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp" />
</LinearLayout>
