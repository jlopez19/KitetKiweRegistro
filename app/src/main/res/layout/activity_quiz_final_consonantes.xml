<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/fondo"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.08">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_title"
            android:gravity="center_vertical|center_horizontal"
            android:text="NIVEL 2"
            android:layout_marginTop="5dp"
            android:textColor="@color/cardview_dark_background"
            android:textSize="34sp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="40dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/cinta_niveles"
            android:orientation="horizontal"
            android:id="@+id/linearLayout2">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_oros"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="35dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:text="x 0"
                android:id="@+id/tv_puntos"
                android:layout_gravity="center_vertical"
                android:textColor="@color/cardview_dark_background"/>
        </LinearLayout>
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/ic_avatarNiveles"
            android:layout_marginTop="20dp"
            android:layout_alignParentTop="true"
            android:layout_alignRight="@+id/linearLayout2"
            android:layout_alignEnd="@+id/linearLayout2" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_below="@id/linearLayout2"
            android:layout_marginLeft="100dp"
            android:layout_marginRight="100dp"
            android:background="@drawable/quiz" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="40dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/pregUnoCon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cuales son las consonantes basicas?"
                android:textColor="@color/cardview_dark_background"
                android:textSize="30sp" />

            <RadioGroup
                android:id="@+id/rgPreguntaUnoC"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">

                <RadioButton
                    android:id="@+id/rbBasicasP"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text=" P, t, ç, k, m, n, b, d, g, s, i, j, z, y, w, r"
                    android:textSize="@dimen/letra_radio" />

                <RadioButton
                    android:id="@+id/rbBasicasN"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text=" P, x, tx, çx, kx, nx, bx, dx, gx, sx, lx"
                    android:textSize="@dimen/letra_radio" />

                <RadioButton
                    android:id="@+id/rbBasicasN2"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text=" Ph, th, çh, kh"
                    android:textSize="@dimen/letra_radio" />

                <RadioButton
                    android:id="@+id/rbBasicasN3"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text=" Pxh, txh, çxh, kxh"
                    android:textSize="@dimen/letra_radio" />
            </RadioGroup>

            <TextView
                android:id="@+id/pregDosCon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:text="Cuales son las consonantes palatales?"
                android:textColor="@color/cardview_dark_background"
                android:textSize="28sp" />


            <RadioGroup
                android:id="@+id/rgPreguntadosC"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp">

                <RadioButton
                    android:id="@+id/rbPalatalesN"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text=" Pxh, txh, çxh, kxh "
                    android:textSize="@dimen/letra_radio" />

                <RadioButton
                    android:id="@+id/rbPalatalesP"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text=" P, x, tx, çx, kx, nx, bx, dx, gx, sx, lx"
                    android:textSize="@dimen/letra_radio" />

                <RadioButton
                    android:id="@+id/rbPalatalesN2"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text=" P, t, ç, k, m, n, b, d, g, s, i, j, z, y, w, r"
                    android:textSize="@dimen/letra_radio" />

                <RadioButton
                    android:id="@+id/rbPalatalesN3"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text=" Ph, th, çh, kh"
                    android:textSize="@dimen/letra_radio" />
            </RadioGroup>

            <TextView
                android:id="@+id/pregTresVoc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cuales son las consonantes aspiradas?"
                android:textColor="@color/cardview_dark_background"
                android:textSize="28sp" />

            <RadioGroup
                android:id="@+id/rgPreguntaTres"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">

                <RadioButton
                    android:id="@+id/rbAspCN2"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text=" P, t, ç, k, m, n, b, d, g, s, i, j, z, y, w, r"
                    android:textSize="@dimen/letra_radio" />

                <RadioButton
                    android:id="@+id/rbAspCN"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text=" P, x, tx, çx, kx, nx, bx, dx, gx, sx, lx"
                    android:textSize="@dimen/letra_radio" />

                <RadioButton
                    android:id="@+id/rbAspCP"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text=" Ph, th, çh, kh"
                    android:textSize="@dimen/letra_radio" />

                <RadioButton
                    android:id="@+id/rbAspCN3"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text=" Pxh, txh, çxh, kxh"
                    android:textSize="@dimen/letra_radio" />
            </RadioGroup>


            <TextView
                android:id="@+id/pregCuatroVoc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:text="Cuales son las consonantes palatales aspiradas?"
                android:textColor="@color/cardview_dark_background"
                android:textSize="26sp" />

            <RadioGroup
                android:id="@+id/rgPreguntaCuatro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp">

                <RadioButton
                    android:id="@+id/rbPalCP"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text=" Pxh, txh, çxh, kxh"
                    android:textSize="@dimen/letra_radio" />

                <RadioButton
                    android:id="@+id/rbPalCN3"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text=" P, t, ç, k, m, n, b, d, g, s, i, j, z, y, w, r"
                    android:textSize="@dimen/letra_radio" />

                <RadioButton
                    android:id="@+id/rbPalCN2"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text=" Ph, th, çh, kh"
                    android:textSize="@dimen/letra_radio" />

                <RadioButton
                    android:id="@+id/rbPalCN"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text=" P, x, tx, çx, kx, nx, bx, dx, gx, sx, lx"
                    android:textSize="@dimen/letra_radio" />

            </RadioGroup>
        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.07"
        android:src="@drawable/img_cinta_dos"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:id="@+id/imageView6" />

</LinearLayout>
